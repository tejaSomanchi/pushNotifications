<resources>
    <style name="MetaData" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/metadata_font_size</item>
    </style>

    <style name="PushTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="PushMessage" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/msg_font_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>